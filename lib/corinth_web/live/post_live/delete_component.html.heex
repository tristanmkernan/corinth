<div>
  <%= if @post do %>
  <h3>Are you sure you want to delete post <em><%= @post.title %></em>?</h3>
  <% end %>

  <div class="field mt-2">
    <button type="button"
            class="button is-danger"
            phx-click="delete"
            phx-target={@myself}>
      Delete post
    </button>
  </div>
</div>
